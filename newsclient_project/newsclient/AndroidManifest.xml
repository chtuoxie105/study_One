<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newsclient"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.newsclient.activity.main.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_qqsports"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.main.MainActivity"
            android:label="@string/app_name" >
                      <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.newsclient.activity.main.TestGsonctivity" >
        </activity>
        <activity android:name="com.example.newsclient.slidingmenu.activity.VideoActivity" />
        <activity android:name="com.example.newsclient.slidingmenu.activity.SurfaceActivity" />
        <activity android:name="com.example.newsclient.slidingmenu.activity.ListViewItemActivity" />
  
    </application>

</manifest>